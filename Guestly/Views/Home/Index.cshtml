@{
  Layout = "Charts";
}
<div id="chartContainer">
  <script type="text/javascript">

    window.onload = function () {
      var chart = new CanvasJS.Chart("chartContainer", {
        theme: "light2",
        animationEnabled: true,
        title: {
          text: "Guestly Data"
        },
        toolTip:{
          animationEnabled: true,
        },
        subtitles: [
          { text: "Subheading" }
        ],
        data: [
        {
          type: "pie",
          startAngle: 160,
          toolTipContent: "<b>{label}</b>: {y}%",
          indexLabel: "{label} - {y}%",
          dataPoints: @Html.Raw(ViewBag.DataPoints)
        }
        ]
      });
      chart.render();
    };
  </script>
</div>