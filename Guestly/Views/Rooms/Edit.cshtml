@{
  Layout = "_Layout";
}

@model Guestly.Models.Room

<h1>Edit price of Room @Html.DisplayFor(model => model.RoomNumber) ( @Html.DisplayFor(model => model.RoomType) )</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Adjust Room Price</h5>
            @using(Html.BeginForm())
            {
              @Html.HiddenFor(model => model.RoomId)
              <div class="form-group">
                @Html.Label("Room Type")
                @Html.TextBoxFor(model => model.RoomNumber, new {@class="form-control", disabled="disabled"})
              </div>
              <div class="form-group">
                @Html.Label("Room Type")
                @Html.TextBoxFor(model => model.RoomType, new {@class="form-control", disabled="disabled"})
              </div>
              <div class="form-group">
                @Html.Label("Room price:")
                @Html.TextBoxFor(model => model.Price, new {@class="form-control", placeholder = "Room Price", required="required"})
              </div>
            <button class="btn btn-outline-warning text-secondary btn-block" type="submit">Save</button>
            @Html.ActionLink("Cancel", "Details", "Rooms", new {id = Model.RoomId}, new{@class="btn btn-outline-warning text-secondary btn-block"})
            }
        </div>
      </div>
    </div>
  </div>
</div>