@{
  Layout = "_Layout";
}

@model Guestly.Models.Room

<h1>Add A Stay Record to @Html.DisplayFor(model => model.RoomNumber)</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
            @using (Html.BeginForm())
            {
              @Html.HiddenFor(model => model.RoomId)
              @Html.HiddenFor(model => model.RoomType)
              @Html.HiddenFor(model => model.Price)

              @Html.Label("Select Guest")
              @Html.DropDownList("GuestId", (SelectList)ViewBag.GuestId, "Select Guest", new { @class = "form-control" })

              @Html.Label("How many nights did the guest stay?")
              @Html.TextBox("newNights", "", new{@class="form-control", placeholder = "Nights", required = "required"})

              <button class="btn btn-outline-warning text-secondary btn-block text-uppercase" type="submit">Save</button>
            }
        </div>
      </div>
    </div>
  </div>
</div>