@{
  Layout = "_Layout";
}

@model Guestly.Models.Room

<h1>Add Guest</h1>
<hr>
<h3>Who is staying in room @Html.DisplayFor(model => model.RoomNumber)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RoomId)
  @Html.HiddenFor(model => model.RoomType)
  @Html.HiddenFor(model => model.Price)

  @Html.Label("Select Guest")
  @Html.DropDownList("GuestId")

  @Html.Label("How many nights is this guest staying?")
  @Html.TextBox("newNights")

  <input type="submit" value="Save" />
}